<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".AITestBankApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AITestBank"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true">
        <!-- 登录Activity -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- 主界面Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        
        <!-- 注册Activity -->
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="false" />
        
        <!-- Supabase连接测试Activity -->
        <activity
            android:name=".SupabaseConnectionTest"
            android:exported="true"
            android:label="Supabase连接测试"
            android:theme="@style/Theme.AITestBank" />
            
        <!-- DeepSeek连接测试Activity -->
        <activity
            android:name=".DeepSeekConnectionTest"
            android:exported="true"
            android:label="DeepSeek连接测试"
            android:theme="@style/Theme.AITestBank" />
        
        <!-- 题目列表Activity -->
        <activity
            android:name=".ui.home.QuestionListActivity"
            android:exported="false"
            android:label="题目列表"
            android:theme="@style/Theme.AITestBank" />
            
        <!-- 答题Activity -->
        <activity
            android:name=".ui.question.QuestionActivity"
            android:exported="false"
            android:label="开始答题"
            android:theme="@style/Theme.AITestBank" />
            
        <!-- 错题详情Activity -->
        <activity
            android:name=".ui.wrong.WrongQuestionDetailActivity"
            android:exported="false"
            android:label="错题详情"
            android:theme="@style/Theme.AITestBank" />
        
        <!-- 学习计划Activity -->
        <activity
            android:name=".ui.profile.StudyPlanActivity"
            android:exported="false"
            android:label="学习计划"
            android:theme="@style/Theme.AITestBank" />
        
        <!-- 设置Activity -->
        <activity
            android:name=".ui.profile.SettingsActivity"
            android:exported="false"
            android:label="设置"
            android:theme="@style/Theme.AITestBank" />
        
        <!-- 头像上传Activity -->
        <activity
            android:name=".ui.profile.AvatarUploadActivity"
            android:exported="false"
            android:label="更换头像"
            android:theme="@style/Theme.AITestBank" />
        
        <!-- 复习提醒广播接收器 -->
        <receiver android:name=".receiver.ReviewReminderReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="DAILY_REVIEW_REMINDER" />
            </intent-filter>
        </receiver>
    </application>

</manifest>