<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- 牛客风格卡片 -->
    <style name="NiukeCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="strokeColor">@color/divider</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <!-- 牛客风格按钮 -->
    <style name="NiukeButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
    </style>
    
    <style name="NiukeButton.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primary_blue</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
    </style>
    
    <!-- 牛客风格文本 -->
    <style name="NiukeText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="NiukeText.Title">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="NiukeText.Body">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>
    
    <style name="NiukeText.Caption">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <!-- 进度条样式 -->
    <style name="NiukeProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar_niuke</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:maxHeight">4dp</item>
    </style>
    
    <!-- 选项样式 -->
    <style name="NiukeOption">
        <item name="android:background">@drawable/bg_question_option</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>
    
    <!-- 标签样式 -->
    <style name="NiukeBadge">
        <item name="android:background">@drawable/bg_badge_niuke_blue</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- 选项选中样式 -->
    <style name="NiukeOption.Selected">
        <item name="android:background">@drawable/bg_option_selected</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="strokeColor">@color/primary_blue</item>
        <item name="strokeWidth">2dp</item>
    </style>
    
    <style name="NiukeOption.Correct">
        <item name="android:background">@drawable/bg_option_correct</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="strokeColor">@color/success</item>
        <item name="strokeWidth">2dp</item>
    </style>
    
    <style name="NiukeOption.Wrong">
        <item name="android:background">@drawable/bg_option_wrong</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="strokeColor">@color/error</item>
        <item name="strokeWidth">2dp</item>
    </style>
    
    <!-- Modern CardView 样式 - 仅保留themes.xml中不存在的样式 -->
    <style name="ModernCardView.Elevated" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="strokeColor">@color/primary_light</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <!-- Modern Button 样式 - 仅保留themes.xml中不存在的样式 -->
    <style name="ModernButton.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
    </style>
    
    <style name="ModernButton.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">6dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">8dp</item>
    </style>
    
</resources>