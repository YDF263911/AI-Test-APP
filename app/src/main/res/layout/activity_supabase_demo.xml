<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supabase云端数据库演示"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:padding="16dp"
            android:background="#ffffff"
            android:elevation="4dp" />

        <!-- 状态显示区域 -->
        <TextView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="等待操作..."
            android:textSize="14sp"
            android:textColor="#666666"
            android:background="#ffffff"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            android:lineSpacingExtra="4dp" />

        <!-- 连接测试按钮 -->
        <Button
            android:id="@+id/test_connection_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试Supabase连接"
            android:textSize="16sp"
            android:backgroundTint="#3F51B5"
            android:textColor="#ffffff"
            android:layout_marginBottom="8dp"
            android:padding="12dp" />

        <!-- 获取题目按钮 -->
        <Button
            android:id="@+id/get_questions_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取校园招聘题目"
            android:textSize="16sp"
            android:backgroundTint="#4CAF50"
            android:textColor="#ffffff"
            android:layout_marginBottom="8dp"
            android:padding="12dp" />

        <!-- 插入题目按钮 -->
        <Button
            android:id="@+id/insert_question_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="插入示例题目"
            android:textSize="16sp"
            android:backgroundTint="#FF9800"
            android:textColor="#ffffff"
            android:layout_marginBottom="8dp"
            android:padding="12dp" />

        <!-- 用户操作按钮 -->
        <Button
            android:id="@+id/test_user_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试用户操作"
            android:textSize="16sp"
            android:backgroundTint="#9C27B0"
            android:textColor="#ffffff"
            android:layout_marginBottom="16dp"
            android:padding="12dp" />

        <!-- 使用说明 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用说明：\n1. 点击'测试连接'验证Supabase连接\n2. 点击'获取题目'查看现有题目\n3. 点击'插入题目'添加新题目\n4. 点击'用户操作'测试用户功能"
            android:textSize="12sp"
            android:textColor="#666666"
            android:background="#ffffff"
            android:padding="16dp"
            android:elevation="2dp"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

</ScrollView>