<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_secondary">

    <!-- AppBarLayout 包含可折叠背景 -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/bg_gradient_blue"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <!-- 标题区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="60dp"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="错题本"
                    android:textColor="@color/white"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="温故知新，查漏补缺"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:alpha="0.9" />
            </LinearLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- 下方内容区域 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="100dp">

            <!-- 统计信息卡片 -->
            <com.google.android.material.card.MaterialCardView
                style="@style/NiukeCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="24dp">

                    <!-- 错题总数 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/wrong_count_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24"
                            android:textColor="@color/primary_blue"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="错题总数"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <!-- 分隔线 -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="16dp"
                        android:background="@color/divider_light" />

                    <!-- 已掌握 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/mastered_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textColor="@color/success_green"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已掌握"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <!-- 分隔线 -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="16dp"
                        android:background="@color/divider_light" />

                    <!-- 复习进度 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/review_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50%"
                            android:textColor="@color/primary_blue"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="复习进度"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 搜索和筛选栏 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <!-- 搜索框 -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    app:boxStrokeColor="@color/primary_blue"
                    app:hintTextColor="@color/primary_blue"
                    app:startIconDrawable="@drawable/ic_search"
                    app:startIconTint="@color/primary_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/search_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="搜索错题内容..."
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:imeOptions="actionSearch" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- 筛选和操作栏 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="8dp">

                    <!-- 筛选下拉框 -->
                    <Spinner
                        android:id="@+id/filter_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_spinner_outline"
                        android:popupBackground="@color/white"
                        android:spinnerMode="dropdown"
                        android:entries="@array/wrong_question_filter_options" />

                    <!-- 操作按钮组 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- 排序 -->
                        <com.google.android.material.chip.Chip
                            android:id="@+id/sort_button"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:checkable="false"
                            app:chipIcon="@drawable/ic_sort"
                            app:chipIconSize="20dp"
                            app:chipBackgroundColor="@color/primary_light"
                            app:rippleColor="@color/ripple"
                            app:chipStartPadding="12dp"
                            app:chipEndPadding="12dp"
                            android:text="排序"
                            android:textColor="@color/white"
                            android:contentDescription="排序" />

                        <!-- 批量操作 -->
                        <com.google.android.material.chip.Chip
                            android:id="@+id/batch_button"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:checkable="false"
                            app:chipIcon="@drawable/ic_select_all"
                            app:chipIconSize="20dp"
                            app:chipBackgroundColor="@color/primary_light"
                            app:rippleColor="@color/ripple"
                            app:chipStartPadding="12dp"
                            app:chipEndPadding="12dp"
                            android:text="批量"
                            android:textColor="@color/white"
                            android:contentDescription="批量操作" />

                        <!-- 清除已掌握 -->
                        <com.google.android.material.chip.Chip
                            android:id="@+id/clear_mastered"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipIcon="@drawable/ic_clear"
                            app:chipIconSize="20dp"
                            app:chipBackgroundColor="@color/primary_light"
                            app:rippleColor="@color/ripple"
                            app:chipStartPadding="12dp"
                            app:chipEndPadding="12dp"
                            android:text="清除已掌握"
                            android:textColor="@color/white"
                            android:contentDescription="清除已掌握错题" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- 错题分析面板 -->
            <com.google.android.material.card.MaterialCardView
                style="@style/NiukeCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- 标题栏 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_pie_chart"
                            android:tint="@color/primary_blue"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="错题分析"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/analysis_update_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="刚刚更新"
                            android:textColor="@color/text_hint"
                            android:textSize="12sp"
                            android:gravity="end" />
                    </LinearLayout>

                    <!-- 薄弱知识点 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="薄弱知识点"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/weak_knowledge_points"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="暂无数据"
                            android:textColor="@color/text_secondary"
                            android:textSize="13sp"
                            android:lineSpacingExtra="4dp" />
                    </LinearLayout>

                    <!-- 分类分布 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="错题分布"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/category_distribution"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="暂无数据"
                            android:textColor="@color/text_secondary"
                            android:textSize="13sp"
                            android:lineSpacingExtra="4dp" />
                    </LinearLayout>

                    <!-- 推荐练习 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="推荐练习"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/recommended_practice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="暂无推荐"
                            android:textColor="@color/text_secondary"
                            android:textSize="13sp"
                            android:lineSpacingExtra="4dp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 复习提醒设置 -->
            <com.google.android.material.card.MaterialCardView
                style="@style/NiukeCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <!-- 图标 -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_notifications"
                        android:tint="@color/primary_blue"
                        android:layout_marginEnd="16dp" />

                    <!-- 文字与状态 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="复习提醒"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/reminder_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="每日提醒已关闭"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <!-- 开关 -->
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/reminder_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 错题列表 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/wrong_question_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingHorizontal="8dp"
                android:paddingBottom="16dp"
                android:nestedScrollingEnabled="false" />

            <!-- 空状态提示（放在错题列表位置） -->
            <LinearLayout
                android:id="@+id/empty_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="40dp"
                android:paddingHorizontal="32dp"
                android:paddingBottom="40dp">

                <!-- 简约小图标 -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_check_circle"
                    android:tint="@color/success_green"
                    android:alpha="0.6" />

                <!-- 简洁的文字提示 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="暂无错题"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="保持全对，继续加油"
                    android:textColor="@color/text_hint"
                    android:textSize="12sp"
                    android:layout_marginBottom="16dp" />

                <!-- 小型引导按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_start_practice"
                    style="@style/ModernButton.Text"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="继续刷题"
                    android:textSize="11sp"
                    app:icon="@drawable/ic_arrow_forward"
                    app:iconSize="14dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- 悬浮操作按钮 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_review_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_refresh"
        app:tint="@color/text_on_primary"
        app:backgroundTint="@color/accent"
        app:elevation="8dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>