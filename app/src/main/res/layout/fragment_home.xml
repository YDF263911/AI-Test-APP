<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_secondary">

    <!-- 渐变背景头部 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/bg_gradient_blue" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <!-- 欢迎标题区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI智能题库"
                    android:textColor="@color/text_on_primary"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:shadowColor="@color/shadow"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="让学习更智能，让进步更高效"
                    android:textColor="@color/text_on_secondary"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <!-- 统计卡片 -->
            <com.google.android.material.card.MaterialCardView
                style="@style/ModernCardView.Compact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="20dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="16dp">

                    <!-- 总题数 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_total_questions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1,280"
                            android:textColor="@color/text_primary"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总题数"
                            android:textColor="@color/text_secondary"
                            android:textSize="11sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- 分隔线 -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="12dp"
                        android:background="@color/divider" />

                    <!-- 正确率 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_accuracy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="86%"
                            android:textColor="@color/text_primary"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="正确率"
                            android:textColor="@color/text_secondary"
                            android:textSize="11sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- 分隔线 -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="12dp"
                        android:background="@color/divider" />

                    <!-- 学习天数 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_study_days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15"
                            android:textColor="@color/text_primary"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="学习天数"
                            android:textColor="@color/text_secondary"
                            android:textSize="11sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 题库分类标题 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="热门题库"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看全部"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- 分类网格布局 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/category_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingHorizontal="8dp"
                android:paddingBottom="16dp"
                android:nestedScrollingEnabled="false" />

            <!-- 快速操作区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

            <!-- 随机练习卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/random_practice_card"
                style="@style/ModernCardView.Compact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="14dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_random"
                        android:background="@drawable/bg_circle_blue"
                        android:padding="6dp"
                        app:tint="@color/text_on_primary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="随机练习"
                            android:textColor="@color/text_primary"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="智能推荐题目，高效练习"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp"
                            android:maxLines="1"
                            android:ellipsize="end" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="@color/text_secondary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 错题复习卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/wrong_question_card"
                style="@style/ModernCardView.Compact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="14dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_error_outline"
                        android:background="@drawable/bg_circle_orange"
                        android:padding="6dp"
                        app:tint="@color/text_on_primary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="错题复习"
                            android:textColor="@color/text_primary"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="针对性复习，突破薄弱点"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp"
                            android:maxLines="1"
                            android:ellipsize="end" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_wrong_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24题待复习"
                            android:textColor="@color/text_secondary"
                            android:textSize="11sp"
                            android:layout_marginEnd="8dp"
                            android:maxLines="1"
                            android:ellipsize="end" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/text_secondary" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- AI解析卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ai_analysis_card"
                style="@style/ModernCardView.Compact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="14dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_smart_toy"
                        android:background="@drawable/bg_circle_blue"
                        android:padding="6dp"
                        app:tint="@color/text_on_primary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AI智能解析"
                            android:textColor="@color/text_primary"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="深度解析，彻底理解知识点"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp"
                            android:maxLines="1"
                            android:ellipsize="end" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="@color/text_secondary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- 悬浮操作按钮 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_quick_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_play_arrow"
        app:tint="@color/text_on_primary"
        app:backgroundTint="@color/accent"
        app:elevation="8dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>